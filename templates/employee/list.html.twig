{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    list:
    <table>
      <tr>
        <td>id</td>
        <td>name</td>
        <td>age</td>
        <td>man</td>
        <td>date</td>
        <td>action</td>
      <tr>
      {% for row in employeeList %}
        <tr>
          <td>{{ row.id }}</td>
          <td>{{ row.name }}</td>
          <td>{{ row.age }}</td>
          <td>{{ row.sex ? 'man' : 'woman' }}</td>
          <td>{{ row.time|date('Y-m-d') }}</td>
          <td><a href="/edit/{{ row.id }}">edit</a>&nbsp;<a href="/delete/{{ row.id }}">delete</a></td>
        <tr>
      {% endfor %}
    </table>
    <a href="/addEmployee">add</a>
</div>
{% endblock %}
